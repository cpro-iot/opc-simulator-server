{
    "compilerOptions": {
        "target": "ES2015",
        "outDir": "dist",
        "module": "commonjs",
        "strict": true,
        "declaration": true,
        "moduleResolution": "node",
        "types": ["node"],
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
